<%- include("partials/_head") %>
<%- include("partials/_nav") %>

<div class="container pb-5">
  <div class="row">
    <div class="col-12 col-lg-8 mx-auto">
      <div class="card shadow-sm mb-4">
        <div class="card-body">
          <h5 class="card-title mb-3">Create a New Post</h5>
          <form action="/posts" method="POST" class="row g-3">
            <div class="col-12">
              <label for="title" class="form-label">Title</label>
              <input id="title" name="title" type="text" class="form-control" placeholder="Post title" required />
            </div>
            <div class="col-12">
              <label for="content" class="form-label">Content</label>
              <textarea id="content" name="content" rows="4" class="form-control" placeholder="Write something..." required></textarea>
            </div>
            <div class="col-12 d-grid d-sm-flex gap-2">
              <button class="btn btn-primary" type="submit">Publish</button>
              <button class="btn btn-outline-secondary" type="reset">Clear</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <div class="row g-4">
    <% if (posts.length === 0) { %>
      <div class="col-12 col-lg-8 mx-auto">
        <div class="alert alert-info shadow-sm">No posts yet. Create your first one above!</div>
      </div>
    <% } %>

    <% posts.forEach(post => { %>
      <div class="col-12 col-lg-8 mx-auto">
        <article class="card post-card shadow-sm h-100">
          <div class="card-body">
            <h5 class="card-title mb-2"><%= post.title %></h5>
            <p class="card-text mb-4"><%= post.content %></p>
            <div class="d-flex flex-wrap gap-2">
              <a class="btn btn-sm btn-outline-primary" href="/posts/<%= post.id %>/edit">Edit</a>
              <form action="/posts/<%= post.id %>?_method=DELETE" method="POST" onsubmit="return confirm('Delete this post?');">
                <button class="btn btn-sm btn-outline-danger" type="submit">Delete</button>
              </form>
            </div>
          </div>
        </article>
      </div>
    <% }) %>
  </div>
</div>

<script
  src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
  integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
  crossorigin="anonymous"
></script>
</body>
</html>
