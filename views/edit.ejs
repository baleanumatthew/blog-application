<%- include("partials/_head") %>
<%- include("partials/_nav") %>

<div class="container pb-5">
  <div class="row">
    <div class="col-12 col-lg-8 mx-auto">
      <div class="card shadow-sm">
        <div class="card-body">
          <h5 class="card-title mb-3">Edit Post</h5>

          <form action="/posts/<%= post.id %>?_method=PUT" method="POST" class="row g-3">
            <div class="col-12">
              <label for="title" class="form-label">Title</label>
              <input id="title" name="title" type="text" class="form-control" value="<%= post.title %>" required />
            </div>
            <div class="col-12">
              <label for="content" class="form-label">Content</label>
              <textarea id="content" name="content" rows="6" class="form-control" required><%= post.content %></textarea>
            </div>
            <div class="col-12 d-grid d-sm-flex gap-2">
              <button class="btn btn-primary" type="submit">Save Changes</button>
              <a class="btn btn-outline-secondary" href="/">Cancel</a>
            </div>
          </form>

        </div>
      </div>
    </div>
  </div>
</div>

<script
  src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
  integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
  crossorigin="anonymous"
></script>
</body>
</html>
